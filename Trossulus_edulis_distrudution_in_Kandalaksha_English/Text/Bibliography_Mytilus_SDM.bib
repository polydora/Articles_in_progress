doi = {10.1016/S0272-7714(02)00190-7},
file = {:D\:/Text/Listlit/Sorted/Hydrology and Hydrography/Dale Prego 2003 Tidal_and_seasonal_nutrient_dynamics_in Chupa bay.pdf:pdf},
issn = {02727714},
journal = {Estuarine, Coastal and Shelf Science},
keywords = {Arctic,Biogeochemical cycle,Budget,Fjord circulation,Mytilus SDM paper,Nutrients,Russia,White sea},
mendeley-tags = {Mytilus SDM paper},
