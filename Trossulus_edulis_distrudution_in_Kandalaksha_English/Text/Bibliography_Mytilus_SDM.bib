file = {:D\:/Text/Listlit/Sorted/Mytilus/Marchenko et al 2023 Tuva mussels.pdf:pdf},
issn = {22967745},
journal = {Frontiers in Marine Science},
keywords = {Barents Sea,Mytilus SDM paper,Mytilus edulis,Mytilus trossulus,demography,habitat distribution,interannual dynamics,subarctic,taxonomic structure},
mendeley-tags = {Mytilus SDM paper},
number = {May},
pages = {1--15},
title = {{Patterns of spatial and temporal dynamics of mixed Mytilus edulis and M. trossulus populations in a small subarctic inlet (Tyuva Inlet, Barents Sea)}},
volume = {10},
year = {2023}
}

