journal = {Marine Ecology},
keywords = {Aggregation,Blue mussel,Mytilus SDM paper,Mytilus edulis,Mytilus trossulus,Reproductive isolation mechanism,Spatial distribution},
mendeley-tags = {Mytilus SDM paper},
number = {4},
pages = {480--487},
title = {{Aggregational behavior of the blue mussels Mytilus edulis and Mytilus trossulus: A potential pre-zygotic reproductive isolation mechanism}},
