keywords = {Cryptic species,Intertidal gastropod,Melampus bidentatus,Mytilus SDM paper,MytredSDM,Niche modeling,Range limits,Temperature},
mendeley-tags = {MytredSDM,Mytilus SDM paper},
number = {15},
pages = {3206--3225},
pmid = {20618906},
title = {{Ecological partitioning among parapatric cryptic species}},
