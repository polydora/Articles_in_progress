file = {:D\:/Text/Listlit/Not sorted/Mytilus edulis vs Mytilus trossulus vs Mytilus galloprovincialis/Qiu et al 2002 salinity tolerance larvae Me Mt.pdf:pdf},
issn = {01718630},
journal = {Marine Ecology Progress Series},
keywords = {Life cycle,Mussel,Mytilus,Mytilus SDM paper,Ontogeny,Salinity},
mendeley-tags = {Mytilus SDM paper},
