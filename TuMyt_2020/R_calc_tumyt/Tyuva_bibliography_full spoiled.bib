journal = {Frontiers in Marine Science},
keywords = {Baltic Sea,Mytilus,climate change,environmental gradients,population structure,recruitment,spatial stochasticity},
publisher = {Frontiers Media {SA}},
title = {{Explaining Recruitment Stochasticity at a Species' Range Margin}},
url = {https://doi.org/10.3389%2Ffmars.2021.659556},
volume = {8},
year = {2021}
