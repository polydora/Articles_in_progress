journal = {Marine Ecology Progress Series},
keywords = {Bivalve,Climate,Environmental drivers,Epifauna,Growth,Ice scouring,Mortality,Predator regulation,Temperature},
pages = {89--100},
publisher = {Inter-Research Science Center},
title = {{Population structure of {\it Mytilus edulis} in the intertidal zone in a sub-Arctic fjord, SW Greenland}},
url = {https://doi.org/10.3354%2Fmeps10317},
volume = {487},
year = {2013}
}

