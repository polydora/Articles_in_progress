journal = {Marine Ecology Progress Series},
keywords = {Biogeography,Bivalve mollusk,Larval ecology,Lipid,Selection,Thermal adaptation},
pages = {183--191},
publisher = {Inter-Research Science Center},
title = {{Temperature effect on survival, growth, and triacylglycerol content during the early ontogeny of {\it Mytilus edulis} and {\it M. Trossulus} }},
