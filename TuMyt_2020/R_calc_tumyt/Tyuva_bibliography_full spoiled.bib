issn = {20452322},
journal = {Scientific Reports},
number = {1},
pmid = {31767954},
publisher = {Springer Science and Business Media {LLC}},
title = {{Decreased thermal tolerance under recurrent heat stress conditions explains summer mass mortality of the blue mussel {\it Mytilus edulis} }},
url = {https://doi.org/10.1038%2Fs41598-019-53580-w},
volume = {9},
year = {2019}
}

